<tr id="<%= dom_id(task) %>">
  <td class="centered-cell">
    <%= render(TaskStatusComponent.new(task)) %>
  </td>
  <td> <%= task.due_date %> </td>
  <td>
    <%= link_to task.description, edit_task_list_task_path(@task_list, task) %>
  </td>
  <td class="centered-cell cell-with-buttons">
    <%= render(TaskActionComponent.new(task)) %>

    <%= button_to task_list_task_path(@task_list, task), method: :delete, class: "red" do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</div>
